<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vamomarcar">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VamoMarcarTest">
        <activity
            android:name=".ResultActivity"
            android:theme="@style/Theme.AppCompat.Dialog.Alert">
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:parentActivityName=".AllEventsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AllEventsActivity" />
        </activity>
        <activity
            android:name=".LoginActivity"
            android:parentActivityName=".AllEventsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AllEventsActivity" />
        </activity>
        <activity
            android:name=".SugestaoActivity"
            android:parentActivityName=".AllEventsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AllEventsActivity" />
        </activity>
        <activity
            android:name=".PerfilActivity"
            android:parentActivityName=".AllEventsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AllEventsActivity" />
        </activity>
        <activity
            android:name=".CriarEventoActivity"
            android:parentActivityName=".AllEventsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AllEventsActivity" />
        </activity>
        <activity
            android:name=".EventoMarcado"
            android:parentActivityName=".AllEventsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AllEventsActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@android:style/Theme.NoDisplay">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AllEventsActivity" />
    </application>

</manifest>